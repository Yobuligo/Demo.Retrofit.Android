<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello World"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_persons_find_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/persons_find_all"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview" />

    <Button
        android:id="@+id/btn_persons_find_by_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/persons_find_by_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_persons_find_all" />

    <Button
        android:id="@+id/btn_persons_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/persons_add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_persons_find_by_id" />
</androidx.constraintlayout.widget.ConstraintLayout>